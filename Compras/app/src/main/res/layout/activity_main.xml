<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComprasActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Compras Online"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="25sp"
            android:background="#D7FB68"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:text="Produtos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textFontWeight="700"
            android:textSize="30sp"
            android:textAlignment="center"/>

        <CheckBox
            android:id="@+id/Chkarroz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Arroz (R$2.69)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            />

        <CheckBox
            android:id="@+id/Chkleite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Leite (R$5,00)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            />

        <CheckBox
            android:id="@+id/Chkcarne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Carne (R$9.70)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            />

        <CheckBox
            android:id="@+id/Chkfeijao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="FeijÃ£o (R$2,30)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/bttotal"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100sp"
            android:backgroundTint="#D7FB68"
            android:text="Total das Compras"
            android:textColor="@color/black"
            app:iconTint="#070606" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/btnFim"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100sp"
            android:backgroundTint="#D7FB68"
            android:text="Finalizar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>